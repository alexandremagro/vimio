<div class="col-lg-3 col-md-4 col-6">
  <%= link_to video, class: "link-discrete" do %>
    <div class="embed-responsive embed-responsive-16by9" href="#">
      <video class="video-js video-preview embed-responsive-item mb-2"
             height="200">
        <source src="<%= video.url %>"
                type="application/x-mpegURL">
      </video>
    </div>
    <div class="mt-2 mb-4">
      <h6 class="mb-2"><%= video.name %></h6>
      <%= yield if block_given? %>
    </div>
  <% end %>
</div>
