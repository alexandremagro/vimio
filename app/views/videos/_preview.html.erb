<div class="col-lg-3 col-md-4 col-6">
  <%= link_to video, class: "link-discrete" do %>
    <div class="embed-responsive embed-responsive-16by9" href="#">
      <video class="video-js video-preview embed-responsive-item mb-2"
             height="200">
        <source src="<%= video.url %>"
                type="application/x-mpegURL">
      </video>
    </div>
    <div class="mt-2 mb-4">
      <h6 class="mb-2"><%= video.name %></h6>
      <p class="text-muted text-small">
        <span><%= video.user_name %></span><br>
        <span><%= pluralize(video.view_count, 'view') %></span> &middot;
        <span><%= distance_of_time_in_words(Time.now, video.created_at) %></span>
      </p>
    </div>
  <% end %>
</div>
