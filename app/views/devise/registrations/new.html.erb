<% content_for :breadcrumb do %>
  <%= breadcrumb_item "Sign in", to: new_session_path(resource_name) %>
  <%= breadcrumb_item "Create an Account" %>
<% end %>

<h2>Create an Account</h2>

<div class="container-sm">
  <%= simple_form_for(resource,
                      as: resource_name,
                      url: registration_path(resource_name)) do |f| %>
    <%= f.input :name%>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, "Sign up", class: 'btn-primary shadow' %>
  <% end %>
</div>
